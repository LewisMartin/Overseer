@model Overseer.WebApp.ViewModels.Overview._OverviewEnvironmentViewModel

<div class="content-area content-accord" data-machineid="@Model.EnvironmentId">
    <h3>
        <a href="@Url.Action("Environmentseer", "Environment", new { environmentId = @Model.EnvironmentId }, null)">
            @Model.EnvironmentName
        </a>
        <span class="latest-update">Next Scheduled Monitoring Update: </span>
</h3>
    <div class="content-table">
        <table class="seer-tbl overview-tbl" cellpadding="0" cellspacing="0">
            <tr>
                <th>Machine</th>
                <th class="ind">Perf</th>
                <th class="ind">Disk</th>
                <th class="ind">Services</th>
                <th class="ind">Events</th>
                <th class="ind">Services</th>
            </tr>
            @if (Model.MachineIndicators != null)
            {
                int rowCounter = 0;
                foreach (var machine in Model.MachineIndicators)
                {
                    rowCounter++;
                    <tr class='@((rowCounter % 2) == 0 ? "alt-row" : "")' data-machineid="@machine.MachineId">
                        <td><a href="@Url.Action("Machineseer", "Machine", new { machineId = @machine.MachineId }, null)">@machine.MachineName</a></td>
                        <td class="ind">
                            <div class="indicator @machine.PerformanceIndicator"></div>
                        </td>
                        <td class="ind">
                            <div class="indicator @machine.DiskIndicator"></div>
                        </td>
                        <td class="ind">
                            <div class="indicator @machine.ProcessIndicator"></div>
                        </td>
                        <td class="ind">
                            <div class="indicator @machine.EventLogIndicator"></div>
                        </td>
                        <td class="ind">
                            <div class="indicator @machine.ServiceIndicator"></div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                </tr>
            }
        </table>
    </div>
</div>
